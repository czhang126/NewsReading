<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <include layout="@layout/activity_bar_search"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingVertical="9dp"
            android:paddingHorizontal="9dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/textDetailNewsTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Title"
                android:textSize="25sp"
                android:textColor="@color/black"/>
            <TextView
                android:id="@+id/textDetailNewsTopic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Topic"
                android:textSize="17sp"/>
            <ImageView
                android:id="@+id/imageDetailNews"
                android:layout_width="match_parent"
                android:layout_height="260dp"
                android:src="@drawable/art_01" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical|end">
                <ImageView
                    android:id="@+id/imageDetailNewsLike"
                    android:layout_width="29dp"
                    android:layout_height="29dp"
                    android:src="@drawable/icon_like_black_border"/>
            </LinearLayout>

            <TextView
                android:id="@+id/textDetailNewsContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="content"
                android:textSize="15sp"
                android:textColor="@color/black"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>